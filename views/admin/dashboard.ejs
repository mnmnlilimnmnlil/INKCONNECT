<%- include('../include/header') %>

<style>
  .admin-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .admin-header {
    margin-bottom: 2rem;
  }
  
  .admin-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .admin-nav {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #333;
  }
  
  .admin-nav a {
    color: #fff;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: background 0.3s;
  }
  
  .admin-nav a:hover,
  .admin-nav a.active {
    background: #F91536;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .stat-card {
    background: #2A2A2A;
    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
  }
  
  .stat-card h3 {
    font-size: 0.9rem;
    color: #999;
    margin-bottom: 0.5rem;
  }
  
  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #F91536;
  }
  
  .admin-section {
    background: #2A2A2A;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  .admin-section h2 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #333;
  }
  
  .table-container {
    overflow-x: auto;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
  }
  
  thead {
    background: #1A1A1A;
  }
  
  th, td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid #333;
  }
  
  th {
    font-weight: 600;
    color: #F91536;
  }
  
  tbody tr:hover {
    background: #333;
  }
  
  .btn-verify,
  .btn-delete {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: all 0.3s;
  }
  
  .btn-verify {
    background: #F91536;
    color: #fff;
  }
  
  .btn-verify:hover {
    background: #E1142F;
  }
  
  .btn-delete {
    background: #dc3545;
    color: #fff;
  }
  
  .btn-delete:hover {
    background: #c82333;
  }
  
  .badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .badge-verified {
    background: #28a745;
    color: #fff;
  }
  
  .badge-pending {
    background: #ffc107;
    color: #000;
  }
  
  .empty-state {
    text-align: center;
    padding: 2rem;
    color: #999;
  }
</style>

<main>
  <div class="admin-container">
    <div class="admin-header">
      <h1>관리자 대시보드</h1>
      <p style="color: #999;">시스템 전체 통계 및 최근 활동</p>
    </div>
    
    <nav class="admin-nav">
      <a href="/admin/dashboard" class="active">대시보드</a>
      <a href="/admin/artists">작가 관리</a>
      <a href="/admin/items">작품 관리</a>
      <a href="/admin/comments">댓글 관리</a>
    </nav>
    
    <!-- 통계 카드 -->
    <div class="stats-grid">
      <div class="stat-card">
        <h3>전체 작가</h3>
        <p class="stat-number"><%= stats.totalUsers %></p>
      </div>
      <div class="stat-card">
        <h3>전체 작품</h3>
        <p class="stat-number"><%= stats.totalItems %></p>
      </div>
      <div class="stat-card">
        <h3>전체 댓글</h3>
        <p class="stat-number"><%= stats.totalComments %></p>
      </div>
      <div class="stat-card">
        <h3>인증 작가</h3>
        <p class="stat-number"><%= stats.verifiedArtists %></p>
      </div>
    </div>
    
    <!-- 인증 대기 작가 -->
    <section class="admin-section">
      <h2>인증 대기 작가</h2>
      <% if (pendingVerification && pendingVerification.length > 0) { %>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>작가명</th>
                <th>이메일</th>
                <th>전문 분야</th>
                <th>가입일</th>
                <th>작업</th>
              </tr>
            </thead>
            <tbody>
              <% pendingVerification.forEach(artist => { %>
                <tr>
                  <td><%= artist.artistName %></td>
                  <td><%= artist.email %></td>
                  <td><%= artist.specialties && artist.specialties.length > 0 ? artist.specialties.join(', ') : '-' %></td>
                  <td><%= new Date(artist.createdAt).toLocaleDateString('ko-KR') %></td>
                  <td>
                    <button onclick="toggleVerification('<%= artist._id %>')" class="btn-verify">
                      인증하기
                    </button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">인증 대기 작가가 없습니다.</div>
      <% } %>
    </section>
    
    <!-- 최근 가입 작가 -->
    <section class="admin-section">
      <h2>최근 가입 작가 (최근 7일)</h2>
      <% if (recentUsers && recentUsers.length > 0) { %>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>작가명</th>
                <th>이메일</th>
                <th>가입일</th>
                <th>인증 상태</th>
              </tr>
            </thead>
            <tbody>
              <% recentUsers.forEach(user => { %>
                <tr>
                  <td><%= user.artistName %></td>
                  <td><%= user.email %></td>
                  <td><%= new Date(user.createdAt).toLocaleDateString('ko-KR') %></td>
                  <td>
                    <% if (user.verified) { %>
                      <span class="badge badge-verified">인증됨</span>
                    <% } else { %>
                      <span class="badge badge-pending">대기중</span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">최근 가입한 작가가 없습니다.</div>
      <% } %>
    </section>
    
    <!-- 최근 업로드 작품 -->
    <section class="admin-section">
      <h2>최근 업로드 작품</h2>
      <% if (recentItems && recentItems.length > 0) { %>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>작품 제목</th>
                <th>작가</th>
                <th>업로드일</th>
                <th>작업</th>
              </tr>
            </thead>
            <tbody>
              <% recentItems.forEach(item => { %>
                <tr>
                  <td><%= item.title %></td>
                  <td><%= item.author ? item.author.artistName : '알 수 없음' %></td>
                  <td><%= new Date(item.createdAt).toLocaleDateString('ko-KR') %></td>
                  <td>
                    <a href="/items/<%= item._id %>" style="color: #F91536; text-decoration: none;">보기</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">최근 업로드된 작품이 없습니다.</div>
      <% } %>
    </section>
  </div>
</main>

<script>
async function toggleVerification(userId) {
  if (!confirm('이 작가를 인증하시겠습니까?')) return;
  
  try {
    const res = await fetch(`/admin/artists/${userId}/verify`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    });
    const data = await res.json();
    if (data.success) {
      alert(data.message);
      location.reload();
    } else {
      alert('오류가 발생했습니다.');
    }
  } catch (err) {
    alert('오류가 발생했습니다.');
  }
}
</script>

<%- include('../include/footer') %>

