<%- include('include/header') %>

<section>
  <h2>목록</h2>

  <form action="/items" method="POST" style="margin-bottom:1rem;">
    <input type="text" name="title" placeholder="제목" required />
    <input type="text" name="note" placeholder="메모" />
    <button type="submit">추가</button>
  </form>

  <ul>
    <% if (items && items.length) { %>
      <% items.forEach(function(it){ %>
        <li>
          <a href="/items/<%= it._id %>"><strong><%= it.title %></strong></a>
          <small style="opacity:.7;"> - <%= it.note %></small>
        </li>
      <% }) %>
    <% } else { %>
      <li>아이템이 없습니다. 위 폼으로 추가해 보세요.</li>
    <% } %>
  </ul>
</section>

<%- include('include/footer') %>


